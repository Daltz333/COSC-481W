<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.THP" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>
    <style name="Theme.THP" parent="Base.Theme.THP">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="buttonStyle">@style/GlobalButtonStyle</item>
        <item name="labelStyle">@style/GlobalTextViewStyle</item>
        <item name="android:statusBarColor">@color/backgroundPrimary</item>
    </style>
    <style name="Theme.THP.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@color/colorPrimaryDark</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_circle_splash</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.THP</item>
    </style>

    <!-- Global overrides -->
    <style name="GlobalButtonStyle" parent="android:Widget.Button">
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="GlobalTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/lato</item>
    </style>
</resources>